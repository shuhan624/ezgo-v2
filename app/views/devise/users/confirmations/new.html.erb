<div class="frame primary-bg user-form"  data-page="user_confirmation">
  <div class="users-form-container">
    <div class="user-form-imgbox">
      <%= content_tag :picture do %>
        <%= content_tag(:source, nil, srcset: image_url("users/user-form-img.webp"), type: "image/webp") %>
        <%= image_tag "users/user-form-img.png", class: 'img-ab-fit user-form-img', alt: 'dv_login', loading: 'lazy' %>
      <% end %>
    </div>
    <div class="user-form-box">
      <div class="user-form-content">
        <h1><%= t(".resend_confirmation_instructions") %></h1>
        <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <%= f.full_error :confirmation_token %>

          <div class="form-inputs">
            <div class="input-mail">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          wrapper_html: { class: 'input-icon' },
                          input_html: { autocomplete: "email", placeholder: t(".email") },
                          value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                          class:'form-control' %>
            </div>
          </div>
          <div class="form-actions"><%= f.button :submit, t(".resend_confirmation_instructions"), class:'form-submit' %></div>
        <% end %>
        <div class="form-other-links">
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
</div>
