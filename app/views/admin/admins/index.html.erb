<% provide :page_title, render_action_i18n(:list, Admin) %>
<% content_for :page_actions do %>
  <div class="float-btns" data-action="<%= "#{action_name}" %>">
    <%= link_to fa_icon(:plus, text: t('btn.new')), new_admin_admin_path, class: 'btn btn-primary float-end' if policy(Admin).new? %>
  </div>
<% end %>

<div class="index-search-form">
  <%= search_form_for @q, url: admin_admins_path, class: 'form-inline search-form' do |f| %>
    <div class="row g-3">
      <div class="col-md-2 mb-1">
        <%= f.select :account_active_eq, options_for_select([[t('simple_form.options.admin.account_active.true'), true], [t('simple_form.options.admin.account_active.false'), false]], @q.account_active_eq), {include_blank: t('search_form.status')},
              class: 'form-select' %>
      </div>
      <div class="col-md-2 mb-1">
        <%= f.search_field :email_or_name_cont, placeholder: t('search_form.keywords'), class: 'form-control' %>
      </div>
      <div class="col-md-3 mb-1">
        <%= f.submit t('action.search'), class: 'btn btn-primary', data: { disable_with: t('action.searching') } %>
        <%= link_to t('action.reset'), request.path, class: 'btn btn-light' %>
      </div>
    </div>
  <% end %>
</div>

<table class="table index-list">
  <thead>
    <tr>
      <%# 如有勾選、挪動等操作再打開 check-column %>
      <%# <td class="check-column"></td> %>
      <th class="column-primary"><%= Admin.human_attribute_name(:email) %></th>
      <th><%= Admin.human_attribute_name(:name) %></th>
      <th><%= Admin.human_attribute_name(:role_id) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <%= content_tag :tr, id: dom_id(admin) do %>
        <%# <th class="check-column"></th> %>
        <td data-colname="<%= Admin.human_attribute_name(:email) %>" class="column-primary">
          <%= admin.email %>
          <button class="btn" type="button" data-mobile="<%= dom_id(admin) %>" class="mobile-collapse">
            <span><i class="fa-solid fa-caret-down"></i></span>
          </button>
        </td>
        <td data-colname="<%= Admin.human_attribute_name(:name) %>"><%= admin.name %></td>
        <td data-colname="<%= Admin.human_attribute_name(:role_id) %>"><%= admin.role&.name %></td>
        <td class="index-table-action text-end">
          <%= link_to t('btn.show'), admin_admin_path(admin), class: 'btn btn-primary me-2' if policy(admin).show? %>

          <div class="dropdown d-inline-block">
            <a href="#" class="link-dark text-decoration-none btn dropdown-more" id="edit_<%= dom_id(admin) %>" data-bs-toggle="dropdown" aria-expanded="false">
              <span><i class="fa-solid fa-ellipsis-vertical"></i></span>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="edit_<%= dom_id(admin) %>">
              <%= link_to t('btn.edit'), edit_admin_admin_path(admin), class: 'dropdown-item' if policy(admin).edit? %>
              <%# <li><hr class="dropdown-divider"></li> %>
            </ul>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>

<div class="table-footer text-black-50">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  <%== pagy_info(@pagy) %>
</div>
