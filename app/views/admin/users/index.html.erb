<% provide :page_title, render_action_i18n(:list, User) %>
<% content_for :page_actions do %>
  <div class="float-btns" data-action="<%= "#{action_name}" %>">
    <%= link_to(fa_icon(:plus, text: t('btn.new')), new_admin_user_path, class: 'btn btn-primary float-end') if policy(User).new? %>
  </div>
<% end %>

<div class="index-search-form">
  <%= search_form_for @q, url: admin_users_path do |f| %>
    <div class="row g-3">
      <div class="col-md-3 mb-1">
        <%= f.select :role_eq, options_for_select(User::ROLES.map { |k,v| [t(k, scope: 'simple_form.options.user.role'), k] }, @q.role_eq), {include_blank: t('search_form.user_role')}, class: 'form-select' %>
      </div>
      <div class="col-md-3 mb-1">
        <%= f.search_field :name_or_email_or_phone_cont, placeholder: t('search_form.keywords'), class: 'form-control' %>
      </div>
      <div class="col-md-3 mb-1">
        <%= f.submit t('action.search'), class: 'btn btn-primary', data: { disable_with: t('action.searching') } %>
        <%= link_to t('action.reset'), request.path, class: 'btn btn-light' %>
      </div>
    </div>
  <% end %>
</div>

<table class="table index-list">
  <thead>
    <tr>
      <th class="column-primary"><%= User.human_attribute_name(:line_avatar) %></th>
      <th>
        <%= User.human_attribute_name(:name) %><br>
        <%#= User.human_attribute_name(:line_name) %>
      </th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th>LINE 註冊</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <%= content_tag :tr, id: dom_id(user), class: dom_class(user) do %>
        <td data-colname="<%= User.human_attribute_name(:line_avatar) %>" class="column-primary">
          <%= image_tag user.avatar, class: 'avatar bg-info rounded-circle', style: "width: 44px" %>
          <button class="btn" type="button" data-mobile="<%= dom_id(user) %>" class="mobile-collapse">
            <span><i class="fa-solid fa-caret-down"></i></span>
          </button>
        </td>
        <td data-colname="<%= User.human_attribute_name(:name) %>">
          <%= user.name %><br>
          <%#= user.line_name %>
        </td>
        <td data-colname="<%= User.human_attribute_name(:email) %>"><%= user.email %></td>
        <td data-colname="LINE 註冊"><%= t("simple_form.#{user.line?}") %></td>
        <td class="index-table-action text-end">
          <%= link_to t('btn.show'), admin_user_path(user), class: 'btn btn-primary me-2' if policy(user).show? %>
          <div class="dropdown d-inline-block">
            <a href="#" class="link-dark text-decoration-none btn dropdown-more" id="edit_<%= dom_id(user) %>" data-bs-toggle="dropdown" aria-expanded="false">
              <span><i class="fa-solid fa-ellipsis-vertical"></i></span>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="edit_<%= dom_id(user) %>">
              <%= link_to t('btn.edit'), edit_admin_user_path(user), class: 'dropdown-item' if policy(user).edit? %>
            </ul>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>

<div class="table-footer text-black-50">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  <%== pagy_info(@pagy) %>
</div>

