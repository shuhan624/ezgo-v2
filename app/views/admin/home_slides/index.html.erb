<% provide :page_title, render_action_i18n(:list, HomeSlide) %>
<% content_for :page_actions do %>
  <div class="float-btns" data-action="<%= "#{action_name}" %>">
    <%= link_to(fa_icon(:plus, text: t('btn.new')), new_admin_home_slide_path, class: 'btn btn-primary float-end') if policy(HomeSlide).new? %>
  </div>
<% end %>

<% if policy(HomeSlide).sort? %>
  <p class="text-muted"><%= t('sort_hint', model: HomeSlide.model_name.human) %></p>
<% end %>

<table class="table index-list">
  <thead>
    <tr>
      <th class="check-column"></th>
      <th class="column-primary"><%= HomeSlide.human_attribute_name(:banner) %></th>
      <th><%= HomeSlide.human_attribute_name(:banner_m) %></th>
      <th><%= HomeSlide.human_attribute_name(:status) %></th>
      <th><%= HomeSlide.human_attribute_name(:en_status) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody <%= 'class=sortable-items data-sort-path=/home_slides/sort' if policy(HomeSlide).sort? %>>
    <% @home_slides.each do |home_slide| %>
      <%= content_tag :tr, id: dom_id(home_slide), class: "sort-#{dom_class(home_slide)}", data: { item: dom_id(home_slide) } do %>
        <%= handle_icon %>
        <td data-colname="<%= HomeSlide.human_attribute_name(:banner) %>" class="column-primary">
          <%= image_tag home_slide.banner, width: 120 if (home_slide.slide_type == 'image') && (home_slide.banner.attached?) %>
            <button class="btn" type="button" data-mobile="<%= dom_id(home_slide) %>" class="mobile-collapse">
            <span><i class="fa-solid fa-caret-down"></i></span>
          </button>
        </td>
        <td data-colname="<%= HomeSlide.human_attribute_name(:banner_m) %>">
          <% if home_slide.slide_type == 'image' %>
            <%= image_tag home_slide.banner_m, width: 120, height: 120 if home_slide.banner_m.attached? %>
          <% end %>
        </td>
        <td data-colname="<%= HomeSlide.human_attribute_name(:status) %>"><%= home_slide.publish_status %></td>
        <td data-colname="<%= HomeSlide.human_attribute_name(:en_status) %>"><%= home_slide.en_publish_status %></td>
        <td class="index-table-action text-end">
          <%= link_to t('btn.show'), admin_home_slide_path(home_slide),
            class: 'btn btn-primary me-2' if policy(home_slide).show? %>
          <div class="dropdown d-inline-block">
            <a href="#" class="link-dark text-decoration-none btn dropdown-more" id="edit_<%= dom_id(home_slide) %>" data-bs-toggle="dropdown" aria-expanded="false">
              <span><i class="fa-solid fa-ellipsis-vertical"></i></span>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="edit_<%= dom_id(home_slide) %>">
              <%= link_to t('btn.edit'), edit_admin_home_slide_path(home_slide), class: 'dropdown-item' if policy(home_slide).edit? %>
            </ul>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
<div class="table-footer text-black-50">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  <%== pagy_info(@pagy) %>
</div>
