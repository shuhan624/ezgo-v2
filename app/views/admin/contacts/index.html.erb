<% provide :page_title, render_action_i18n(:list, Contact) %>

<% content_for :page_actions do %>
  <div class="float-btns" data-action="<%= "#{action_name}" %>">
    <%= link_to t('action.download'), admin_contacts_path(format: :xlsx, q: request.params[:q]), class: 'btn btn-success float-end' %>
  </div>
<% end %>

<div class="search-card-body body">
  <div class="index-search-form">
    <%= search_form_for @q, url: admin_contacts_path do |f| %>
      <div class="row g-3">
        <div class="col-md-3 mb-1">
          <%= f.search_field :name_or_phone_or_email_cont, placeholder: t('search_form.keywords'), class: 'form-control' %>
        </div>
        <div class="col-md-3 mb-1">
          <%= f.select :status_eq, options_for_select(Contact::STATUS.map { |k,v| [t(k, scope: 'simple_form.options.contact.status'), k] }, @q.status_eq), {include_blank: t('search_form.status')}, class: 'form-select' %>
        </div>
        <div class="col-md-3 mb-1">
          <%= f.submit t('action.search'), class: 'btn btn-primary', data: { disable_with: t('action.searching') } %>
          <%= link_to t('action.reset'), request.path, class: 'btn btn-light' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<table class="table index-list">
  <thead>
    <tr>
      <th class="column-primary"><%= Contact.human_attribute_name(:name) %></th>
      <th><%= Contact.human_attribute_name(:email) %></th>
      <th>摘要</th>
      <th><%= Contact.human_attribute_name(:created_at) %></th>
      <th><%= Contact.human_attribute_name(:updated_at) %></th>
      <th><%= Contact.human_attribute_name(:status) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <%= content_tag :tr, id: dom_id(contact), class: dom_class(contact) do %>
        <td data-colname="<%= Contact.human_attribute_name(:name) %>" class="column-primary">
          <%= contact.name %>
          <button class="btn" type="button" data-mobile="<%= dom_id(contact) %>" class="mobile-collapse">
            <span><i class="fa-solid fa-caret-down"></i></span>
          </button>
        </td>
        <td data-colname="<%= Contact.human_attribute_name(:email) %>"><%= mail_to contact.email, contact.email %></td>
        <td data-colname="摘要"><span><%= contact.summary %></span></td>
        <td data-colname="<%= Contact.human_attribute_name(:created_at) %>"><%= contact.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td data-colname="<%= Contact.human_attribute_name(:updated_at) %>"><%= contact.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td data-colname="<%= Contact.human_attribute_name(:status) %>"><%= contact.status %></td>
        <td class="index-table-action text-end">
          <%= link_to t('btn.show'), admin_contact_path(contact),
            class: 'btn btn-primary me-2' if policy(contact).show? %>
          <div class="dropdown d-inline-block">
            <a href="#" class="link-dark text-decoration-none btn dropdown-more" id="edit_<%= dom_id(contact) %>" data-bs-toggle="dropdown" aria-expanded="false">
              <span><i class="fa-solid fa-ellipsis-vertical"></i></span>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="edit_<%= dom_id(contact) %>">
              <%= link_to t('btn.edit'), edit_admin_contact_path(contact), class: 'dropdown-item' if policy(contact).edit? %>
            </ul>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
<div class="table-footer text-black-50">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  <%== pagy_info(@pagy) %>
</div>
