<% provide :page_title, render_action_i18n(:list, Role) %>
<% content_for :page_actions do %>
  <div class="float-btns" data-action="<%= "#{action_name}" %>">
    <%= link_to(fa_icon(:plus, text: t('btn.new')), new_admin_role_path, class: 'btn btn-primary float-end') if policy(Role).new? %>
  </div>
<% end %>

<table class="table index-list">
  <thead>
    <tr>
      <th class="column-primary"><%= Role.human_attribute_name(:name) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <%= content_tag :tr, id: dom_id(role), class: dom_class(role) do %>
        <td data-colname="<%= Role.human_attribute_name(:name) %>" class="column-primary">
          <%= role.name %>
          <button class="btn" type="button" data-mobile="<%= dom_id(role) %>" class="mobile-collapse">
            <span><i class="fa-solid fa-caret-down"></i></span>
          </button>
        </td>
        <td class="index-table-action text-end">
          <%= link_to t('btn.show'), admin_role_path(role),
            class: 'btn btn-primary me-2' if policy(role).show? %>
          <div class="dropdown d-inline-block">
            <a href="#" class="link-dark text-decoration-none btn dropdown-more" id="edit_<%= dom_id(role) %>" data-bs-toggle="dropdown" aria-expanded="false">
              <span><i class="fa-solid fa-ellipsis-vertical"></i></span>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="edit_<%= dom_id(role) %>">
              <%= link_to t('btn.edit'), edit_admin_role_path(role), class: 'dropdown-item' if policy(role).edit? %>
            </ul>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
<div class="table-footer text-black-50">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  <%== pagy_info(@pagy) %>
</div>
