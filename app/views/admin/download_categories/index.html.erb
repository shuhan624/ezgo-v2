<% provide :page_title, render_action_i18n(:list, DownloadCategory) %>
<% content_for :page_actions do %>
  <div class="float-btns" data-action="<%= "#{action_name}" %>">
    <%= link_to(fa_icon(:plus, text: t('btn.new')), new_admin_download_category_path, class: 'btn btn-primary float-end') if policy(DownloadCategory).new? %>
  </div>
<% end %>

<% if policy(DownloadCategory).sort? %>
  <p class="text-muted"><%= t('sort_hint', model: DownloadCategory.model_name.human) %></p>
<% end %>

<div class="index-search-form">
  <%= search_form_for @q, url: admin_download_categories_path do |f| %>
    <div class="row g-3">
      <div class="col-md-3 mb-1">
        <%= f.select :status_eq, options_for_select(DownloadCategory::STATUS.map { |k, v| [t(k, scope: 'simple_form.options.download_category.status'), k]}, @q.status_eq), {include_blank: t('search_form.status')}, {onchange: 'this.form.submit()', class: 'form-select'} %>
      </div>
      <div class="col-md-3 mb-1">
        <%= f.search_field :name_or_name_en_cont, placeholder: t('search_form.keywords'), class: 'form-control' %>
      </div>
      <div class="col-md-3 mb-1">
        <%= f.submit t('action.search'), class: 'btn btn-primary', data: { disable_with: t('action.searching') } %>
        <%= link_to t('action.reset'), request.path, class: 'btn btn-light' %>
      </div>
    </div>
  <% end %>
</div>


<table class="table index-list">
  <thead>
    <tr>
      <th class="check-column"></th>
      <th class="column-primary"><%= DownloadCategory.human_attribute_name(:name) %></th>
      <th><%= DownloadCategory.human_attribute_name(:status) %></th>
      <th><%= DownloadCategory.human_attribute_name(:en_status) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody <%= 'class=sortable-items data-sort-path=/download_categories/sort' if policy(DownloadCategory).sort? %>>
    <% @download_categories.each do |download_category| %>
      <%= content_tag :tr, id: dom_id(download_category), class: "sort-#{dom_class(download_category)}", data: { item: dom_id(download_category) } do %>
        <%= handle_icon %>
        <td data-colname="<%= DownloadCategory.human_attribute_name(:name) %>" class="column-primary">
          <%= download_category.show_name %>
          <button class="btn" type="button" data-mobile="<%= dom_id(download_category) %>" class="mobile-collapse">
            <span><i class="fa-solid fa-caret-down"></i></span>
          </button>
        </td>
        <td data-colname="<%= DownloadCategory.human_attribute_name(:status) %>"><%= download_category.status %></td>
        <td data-colname="<%= DownloadCategory.human_attribute_name(:en_status) %>"><%= download_category.en_status %></td>
        <td class="index-table-action text-end">
          <%= link_to t('btn.show'), admin_download_category_path(download_category),
            class: 'btn btn-primary me-2' if policy(download_category).show? %>
          <div class="dropdown d-inline-block">
            <a href="#" class="link-dark text-decoration-none btn dropdown-more" id="edit_<%= dom_id(download_category) %>" data-bs-toggle="dropdown" aria-expanded="false">
              <span><i class="fa-solid fa-ellipsis-vertical"></i></span>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="edit_<%= dom_id(download_category) %>">
              <%= link_to t('btn.edit'), edit_admin_download_category_path(download_category), class: 'dropdown-item' if policy(download_category).edit? %>
            </ul>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
<div class="table-footer text-black-50">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  <%== pagy_info(@pagy) %>
</div>
