<% provide :page_title, render_action_i18n(:list, Milestone) %>
<% content_for :page_actions do %>
  <div class="float-btns" data-action="<%= "#{action_name}" %>">
    <%= link_to(fa_icon(:plus, text: t('btn.new')), new_admin_milestone_path, class: 'btn btn-primary float-end') if policy(Milestone).new? %>
  </div>
<% end %>

<div class="index-search-form">
  <%= search_form_for @q, url: admin_milestones_path do |f| %>
    <div class="row g-3">
      <div class="col-md-3 mb-1">
        <%= f.select :status_eq, options_for_select(Milestone::STATUS.map { |k,v| [t(k, scope: 'simple_form.options.milestone.status'), k] }, @q.status_eq), {include_blank: t('search_form.status')}, class: 'form-select' %>
      </div>
      <div class="col-md-3 mb-1">
        <%= f.select :en_status_eq, options_for_select(Milestone::STATUS.map { |k,v| [t(k, scope: 'simple_form.options.milestone.status'), k] }, @q.en_status_eq), {include_blank: t('search_form.en_status')}, class: 'form-select' %>
      </div>
      <div class="col-md-3 mb-1">
        <%= f.search_field :title_or_title_en_cont, placeholder: t('search_form.keywords'), class: 'form-control' %>
      </div>
      <div class="col-md-3 mb-1">
        <%= f.submit t('action.search'), class: 'btn btn-primary', data: { disable_with: t('action.searching') } %>
        <%= link_to t('action.reset'), request.path, class: 'btn btn-light' %>
      </div>
    </div>
  <% end %>
</div>

<table class="table index-list">
  <thead>
    <tr>
      <th class="column-primary"><%= Milestone.human_attribute_name(:date) %></th>
      <th><%= Milestone.human_attribute_name(:content) %></th>
      <th><%= Milestone.human_attribute_name(:status) %></th>
      <th><%= Milestone.human_attribute_name(:en_status) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @milestones.each do |milestone| %>
      <%= content_tag :tr, id: dom_id(milestone), class: dom_class(milestone) do %>
        <!-- <td><%= milestone.title %></td> -->
        <td data-colname="<%= Milestone.human_attribute_name(:date) %>" class="column-primary">
          <%= milestone.date %>
          <button class="btn" type="button" data-mobile="<%= dom_id(milestone) %>" class="mobile-collapse">
            <span><i class="fa-solid fa-caret-down"></i></span>
          </button>
        </td>
        <td data-colname="<%= Milestone.human_attribute_name(:content) %>"><%= milestone.short_content %></td>
        <td data-colname="<%= Milestone.human_attribute_name(:status) %>"><%= milestone.status %></td>
        <td data-colname="<%= Milestone.human_attribute_name(:en_status) %>"><%= milestone.en_status %></td>
        <td class="index-table-action text-end">
          <%= link_to t('btn.show'), admin_milestone_path(milestone),
            class: 'btn btn-primary me-2' if policy(milestone).show? %>
          <div class="dropdown d-inline-block">
            <a href="#" class="link-dark text-decoration-none btn dropdown-more" id="edit_<%= dom_id(milestone) %>" data-bs-toggle="dropdown" aria-expanded="false">
              <span><i class="fa-solid fa-ellipsis-vertical"></i></span>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="edit_<%= dom_id(milestone) %>">
              <%= link_to t('btn.edit'), edit_admin_milestone_path(milestone), class: 'dropdown-item' if policy(milestone).edit? %>
            </ul>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
<div class="table-footer text-black-50">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  <%== pagy_info(@pagy) %>
</div>
