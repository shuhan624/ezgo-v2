<div class="card dash-card card-2">
  <div class="card-body">
    <div id="ga-sources" class="c3_chart"></div>
  </div>
  <div class="header">
    <h2><strong>網站客群</strong>/流量來源比較</h2>
  </div>
</div>

<script type="module">
  var source_chart = c3.generate({
    bindto: '#ga-sources',
    data: {
      type: 'donut',
      columns: <%= raw @sources_data %>,
    },
    color: {
      pattern: ['#638D84', '#aec7e8', '#539AB6', '#F4C329', '#ECE8CF', '#463C33', '#ff9896', '#9467bd', '#c5b0d5', '#8c564b', '#c49c94', '#e377c2', '#f7b6d2', '#7f7f7f', '#bcbd22', '#dbdb8d', '#17becf', '#9edae5']
    },
    donut: {
      title: '<%= @source_total %>'
    },
  });
</script>
