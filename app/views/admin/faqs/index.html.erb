<% provide :page_title, render_action_i18n(:list, Faq) %>
<% content_for :page_actions do %>
  <div class="float-btns" data-action="<%= "#{action_name}" %>">
    <%= link_to(fa_icon(:plus, text: t('btn.new')), new_admin_faq_path, class: 'btn btn-primary float-end') if policy(Faq).new? %>
  </div>
<% end %>

<p class="text-muted"><%= t('sort_hint', model: Faq.model_name.human) %></p>

<div class="index-search-form">
  <%= search_form_for @q, url: admin_faqs_path do |f| %>
    <div class="row g-3">
      <div class="col-md-3 mb-1">
        <%= f.collection_select :faq_category_id_eq, FaqCategory.all, :id, :name, { selected: params.dig(:q, :faq_category_id_eq), include_blank: t('search_form.category') }, class: 'form-select' %>
      </div>
      <div class="col-md-3 mb-1">
        <%= f.select :status_eq, options_for_select(Faq::STATUS.map { |k,v| [t(k, scope: 'simple_form.options.faq.status'), k] }, @q.status_eq), {include_blank: t('search_form.status')}, class: 'form-select' %>
      </div>
      <div class="col-md-3 mb-1">
        <%= f.select :en_status_eq, options_for_select(Faq::STATUS.map { |k, v| [t(k, scope: 'simple_form.options.faq.en_status'), k]}, @q.en_status_eq), {include_blank: t('search_form.en_status')}, class: 'form-select' %>
      </div>
      <div class="col-md-6 mb-1">
        <%= f.search_field :title_or_title_en_cont, placeholder: t('search_form.keywords'), class: 'form-control' %>
      </div>
      <div class="col-md-3 mb-1">
        <%= f.submit t('action.search'), class: 'btn btn-primary', data: { disable_with: t('action.searching') } %>
        <%= link_to t('action.reset'), request.path, class: 'btn btn-light' %>
      </div>
    </div>
  <% end %>
</div>

<table class="table index-list">
  <thead>
    <tr>
      <th class="check-column"></th>
      <th class="column-primary"><%= Faq.human_attribute_name(:title) %></th>
      <th><%= Faq.human_attribute_name(:faq_category) %></th>
      <th><%= Faq.human_attribute_name(:status) %></th>
      <th><%= Faq.human_attribute_name(:en_status) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody <%= 'class=sortable-items data-sort-path=/faqs/sort' if policy(Faq).sort? %>>
    <% @faqs.each do |faq| %>
      <%= content_tag :tr, id: dom_id(faq), class: "sort-#{dom_class(faq)}", data: { item: dom_id(faq) } do %>
        <%= handle_icon %>
        <td data-colname="<%= Faq.human_attribute_name(:title) %>" class="column-primary title">
          <%= faq.show_title %>
          <button class="btn" type="button" data-mobile="<%= dom_id(faq) %>" class="mobile-collapse">
            <span><i class="fa-solid fa-caret-down"></i></span>
          </button>
        </td>
        <td data-colname="<%= Faq.human_attribute_name(:faq_category) %>"><%= faq.faq_category.name %></td>
        <td data-colname="<%= Faq.human_attribute_name(:status) %>"><%= faq.status %></td>
        <td data-colname="<%= Faq.human_attribute_name(:en_status) %>"><%= faq.en_status %></td>
        <td class="index-table-action text-end">
          <%= link_to t('btn.show'), admin_faq_path(faq),
            class: 'btn btn-primary me-2' if policy(faq).show? %>
          <div class="dropdown d-inline-block">
            <a href="#" class="link-dark text-decoration-none btn dropdown-more" id="edit_<%= dom_id(faq) %>" data-bs-toggle="dropdown" aria-expanded="false">
              <span><i class="fa-solid fa-ellipsis-vertical"></i></span>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="edit_<%= dom_id(faq) %>">
              <%= link_to t('btn.edit'), edit_admin_faq_path(faq), class: 'dropdown-item' if policy(faq).edit? %>
            </ul>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
<div class="table-footer text-black-50">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  <%== pagy_info(@pagy) %>
</div>
