<%= simple_form_for([:admin, @faq], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <% if @faq.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@faq.errors.count, "error") %> prohibited this faq from being saved:</h4>
      <ul>
      <% @faq.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="tabs-group">
    <div class="card mb-4">
      <div class="tabs-btn">
        <a href="#setting" class="tab active">共用設定</a>
        <a href="#zh-hant" class="tab ">中文</a>
        <a href="#en" class="tab">英文</a>
      </div>
    </div>
    <div class="tabs-content card">
      <div class="tab-content card-body active" id="setting">
        <%= f.association :faq_category, as: :radio_buttons, wrapper: :vertical_collection_inline, collection: FaqCategory.order(name: :asc) %>
      </div>
      <div class="tab-content card-body" id="zh-hant">
        <%= f.input :title %>
        <%= f.input :status, as: :radio_buttons, wrapper: :vertical_collection_inline, collection: Faq::STATUS.keys.map { |status| [status, t(status, scope: 'simple_form.options.faq.status')] }, label_method: :second, value_method: :first %>
        <%= f.input :content, as: :text, input_html: { class: 'tinymce', id: 'faq-content', value: @faq.content&.html_safe }, wrapper_html: { style: 'max-width: 840px' } %>
      </div>
      <div class="tab-content card-body" id="en">
        <%= f.input :title_en %>
        <%= f.input :en_status, as: :radio_buttons, wrapper: :vertical_collection_inline, collection: Faq::STATUS.keys.map { |status| [status, t(status, scope: 'simple_form.options.faq.status')] }, label_method: :second, value_method: :first %>
        <%= f.input :content_en, as: :text, input_html: { class: 'tinymce', id: 'faq-content-en', value: @faq.content_en&.html_safe }, wrapper_html: { style: 'max-width: 840px' } %>
      </div>
    </div>
  </div>
  <div class="float-btns form-actions">
    <div>
      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= link_to t('btn.show'),
          admin_faq_path(@faq),
          class: 'btn btn-light' if controller.action_name == 'edit' && policy(@faq).show? %>
    </div>
    <%= link_to fa_icon(:"trash-can"), admin_faq_path(@faq),
        class: 'btn btn-danger-light float-end ms-2 single-icon',
        method: :delete,
        data: { confirm: t('confirm_message') } if controller.action_name == 'edit' &&  policy(@faq).destroy? %>
  </div>
<% end %>
