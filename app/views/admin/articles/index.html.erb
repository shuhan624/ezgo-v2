<% provide :page_title, render_action_i18n(:list, Article) %>
<% content_for :page_actions do %>
  <div class="float-btns" data-action="<%= "#{action_name}" %>">
    <%= link_to(fa_icon(:plus, text: t('btn.new')), new_admin_article_url, class: 'btn btn-primary float-end') if policy(Article).new? %>
  </div>
<% end %>

<%= render 'search' %>

<table class="table index-list">
  <thead>
    <tr>
      <th class="check-column"></th>
      <th class="column-primary"><%= Article.human_attribute_name(:title) %></th>
      <th><%= Article.human_attribute_name(:featured) %></th>
      <th><%= Article.human_attribute_name(:top) %></th>
      <th><%= Article.human_attribute_name(:default_category) %></th>
      <th><%= Article.human_attribute_name(:status) %></th>
      <th><%= Article.human_attribute_name(:en_status) %></th>
      <th><%= Article.human_attribute_name(:published_at) %></th>
      <th><%#= Article.human_attribute_name(:tag_list) %></th>
        <%# tag is not required, save for the future%>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <%= content_tag :tr, id: dom_id(article), class: dom_class(article) do %>
        <th class="check-column-th"><%= article.show_post_type_icon %></th>
        <td data-colname="<%= Article.human_attribute_name(:title) %>" class="column-primary title">
          <%= article.show_title %>
          <button class="btn" type="button" data-mobile="<%= dom_id(article) %>" class="mobile-collapse">
            <span><i class="fa-solid fa-caret-down"></i></span>
          </button>
        </td>
        <td data-colname="<%= Article.human_attribute_name(:featured) %>"><%= article.featured %></td>
        <td data-colname="<%= Article.human_attribute_name(:top) %>"><%= article.top %></td>
        <td data-colname="<%= Article.human_attribute_name(:default_category) %>"><%= article.default_category_name %></td>
        <td data-colname="<%= Article.human_attribute_name(:status) %>"><%= article.publish_status %></td>
        <td data-colname="<%= Article.human_attribute_name(:en_status) %>"><%= article.en_publish_status %></td>
        <td data-colname="<%= Article.human_attribute_name(:published_at) %>"><%= article.published_at_datetime %></td>
        <%# <td class="tags"><span><%= article.show_tags </span></td>%>
        <%# tag is not required, save for the future %>
        <td class="index-table-action text-end">
          <%= link_to t('btn.show'), admin_article_path(article),
            class: 'btn btn-primary me-2' if policy(article).show? %>
          <div class="dropdown d-inline-block">
            <a href="#" class="link-dark text-decoration-none btn dropdown-more" id="edit_<%= dom_id(article) %>" data-bs-toggle="dropdown" aria-expanded="false">
              <span><i class="fa-solid fa-ellipsis-vertical"></i></span>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="edit_<%= dom_id(article) %>">
              <%= link_to t('btn.edit'), edit_admin_article_path(article), class: 'dropdown-item' if policy(article).edit? %>
            </ul>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
<div class="table-footer text-black-50">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  <%== pagy_info(@pagy) %>
</div>
